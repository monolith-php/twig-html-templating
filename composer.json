{
  "name": "monolith/twig-html-templating",
  "description": "Twig HTML templating component for the Monolith framework.",
  "keywords": [
    "monolith",
    "twig",
    "html",
    "templating"
  ],
  "require": {
    "php": ">=8.1",
    "monolith/component-bootstrapping": "^9",
    "monolith/dependency-injection": "^10",
    "monolith/configuration": "^8",
    "monolith/collections": "^10",
    "twig/twig": "^2"
  },
  "require-dev": {
    "phpspec/phpspec": "^7"
  },
  "autoload": {
    "psr-4": {
      "Monolith\\Twig\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "spec\\Monolith\\Twig\\": "spec/"
    },
    "files": [
      "spec/functions.php"
    ]
  },
  "config": {
    "sort-packages": true,
    "bin-dir": "bin"
  },
  "minimum-stability": "dev"
}
