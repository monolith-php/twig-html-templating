{
  "name": "monolith/twig-html-templating",
  "description": "Twig HTML templating component for the Monolith framework.",
  "keywords": [
    "monolith",
    "twig",
    "html",
    "templating"
  ],
  "require": {
    "php": ">=8",
    "monolith/component-bootstrapping": "^8",
    "monolith/dependency-injection": "^9",
    "monolith/configuration": "^7",
    "monolith/collections": "^9",
    "twig/twig": "^2"
  },
  "require-dev": {
    "phpspec/phpspec": "^7"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.humanmusic.eu",
      "canonical": false,
      "only": [
        "monolith/*"
      ]
    }
  ],
  "autoload": {
    "psr-4": {
      "Monolith\\Twig\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "spec\\Monolith\\Twig\\": "spec/"
    },
    "files": [
      "spec/functions.php"
    ]
  },
  "config": {
    "sort-packages": true,
    "bin-dir": "bin"
  },
  "minimum-stability": "dev"
}
